@model Proyecto_Final.Models.Juego

<h2>Agregar Nuevo Juego</h2>
<button class="btn btn-secondary" onclick="window.history.back();">Volver</button>

<form asp-action="AgregarJuegos" asp-controller="Home" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Nombre">Nombre del Juego</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion">Descripción</label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Genero">Género</label>
        <input asp-for="Genero" class="form-control" />
        <span asp-validation-for="Genero" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Precio">Precio</label>
        <input asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImagenUrl">Imagen URL</label>
        <input asp-for="ImagenUrl" class="form-control" />
        <span asp-validation-for="ImagenUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Agregar Juego</button>
</form>
