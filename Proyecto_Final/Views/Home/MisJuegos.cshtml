@model IEnumerable<Proyecto_Final.Models.Juego>

@{
    ViewData["Title"] = "Mis Juegos";
}

<h2>Mis Juegos</h2>

<div class="juegos-grid">
    @foreach (var juego in Model)
    {
        <div class="juego-card">
            <img src="@Url.Content(juego.ImagenUrl)" alt="Imagen de @juego.Nombre" class="juego-imagen" />
            <h2 class="juego-nombre">@juego.Nombre</h2>
            <p class="juego-descripcion">@juego.Descripcion</p>
            <p><strong>Género:</strong> @juego.Genero</p>
            <p><strong>Precio:</strong> Usdt$@juego.Precio</p>
            <p><strong>Desarrolladora:</strong> @juego.Desarrolladora</p>
        </div>
    }
</div>

<style>
    .juegos-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 20px;
        margin-top: 20px;
        justify-items: center;
    }

    .juego-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 16px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #f3fb8a;
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
    }

    .juego-imagen {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 10px;
    }

    .juego-nombre {
        font-size: 1.25em;
        margin: 10px 0;
        color: #333;
    }

    .juego-descripcion {
        font-size: 0.9em;
        color: #666;
        margin: 10px 0;
    }

    .juego-card p {
        margin: 5px 0;
        font-size: 0.95em;
    }
</style>
