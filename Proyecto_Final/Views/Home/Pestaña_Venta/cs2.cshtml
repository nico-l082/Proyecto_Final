<body>

    <div>
        <div id="columnas">
            <div>
                <img id="Venta_img" src="~/lib/imagenes_juegos/cs2.jpg" />
            </div>
            <div id="centrado" style="margin-top:10rem;">
                <a href="@Url.Action("BuyNow", "Home")">
                    <span id="buy_now"><b>BUY NOW</b></span>
                </a>                
            </div>            
        </div>
        <div id ="Venta_span_cs2">
            <span ><b>Counter Strike 2</b></span>
        </div>
